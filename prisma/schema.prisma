generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String

  createdAt DateTime @default(now())

}

model Movie {
  id String @id @default(uuid())
  title String
  overview String
  releaseYear Int
  genres String[] @default([])
  runtime Int?
  posterURL String?
  createdBy String
  createdAt DateTime @default(now())
}